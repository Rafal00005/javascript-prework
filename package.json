{
	"name": "landing-page",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"init-project": "mkdirp sass dist vendor js img && touch index.html sass/style.scss && npm run css",
		"css": "sass sass/style.scss dist/style.css --source-map && postcss dist/style.css -o dist/style.css",
		"serve": "browser-sync start --server --files 'index.html' 'dist/*' 'js/*.js'",
		"watch:sass": "sass --watch sass/style.scss:dist/style.css",
		"watch": "npm-run-all --parallel serve watch:sass",
		"lint:html": "html-validate \"index.html\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"devDependencies": {
		"autoprefixer": "^10.4.21",
		"browser-sync": "^3.0.4",
		"html-validate": "^9.7.1",
		"mkdirp": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"sass": "^1.91.0"
	}
}
